<h1>物件登録</h1>
<%= form_with(model: @property, local: true) do |form| %>

<% if @property.errors.any? %>
<div class="alert alert-warning">
  <ul>
    <% @property.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="property_name">
  <%= form.label :'物件名' %><br>
  <%= form.text_field :name %>
</div>
<div class="property_rent">
  <%= form.label :'賃料' %><br>
  <%= form.text_field :rent %>円
</div>
<div class="property_address">
  <%= form.label :'住所' %><br>
  <%= form.text_field :address %>
</div>
<div class="property_age">
  <%= form.label :'築年数' %><br>
  <%= form.text_field :age %>年
</div>
<div class="property_content">
  <%= form.label :'備考' %><br>
  <%= form.text_field :content %>
</div>
<hr>

<h3>最寄駅1</h3>
<%= form.fields_for :nearest_stations do |form| %>

<div class="nearest_staiom_line">
  <%= form.label :'路線名' %><br>
  <%= form.text_field :line %>
</div>
<div class="nearest_staiom_station">
  <%= form.label :'駅名' %><br>
  <%= form.text_field :station %>
</div>
<div class="nearest_staiom_minuits_walk">
  <%= form.label :'徒歩分数' %><br>
  <%= form.text_field :minuites_walk %>
</div>


<% end %>

<h3>最寄駅2</h3>
<%= form.fields_for :nearest_stations do |form| %>

<div class="nearest_staiom_line">
  <%= form.label :'路線名' %><br>
  <%= form.text_field :line %>
</div>
<div class="nearest_staiom_station">
  <%= form.label :'駅名' %><br>
  <%= form.text_field :station %>
</div>
<div class="nearest_staiom_minuits_walk">
  <%= form.label :'徒歩分数' %><br>
  <%= form.text_field :minuites_walk %>
</div>
<% end %>

<%= form.submit %>

<% end %>
